                "gif",
                "webp",
                "mp4",
                "webm",
                "mp3",
                "ogg",
                "wav",
                "pdf",
                "txt",
                "zip"
            ]
        },
        {
            "bucketId": "banners",
            "name": "Banners",
            "maximumFileSize": 10485760,
            "allowedFileExtensions": [
                "png",
                "jpg",
                "jpeg",
                "webp"
            ]
        }
    ]
