{
    "projectId": "discordpro",
    "projectName": "Discord Pro",
    "functions": [
        {
            "functionId": "send-message",
            "name": "Send Message",
            "runtime": "node-22",
            "entrypoint": "src/main.js",
            "path": "functions/send-message"
        },
        {
            "functionId": "create-server",
            "name": "Create Server",
            "runtime": "node-22",
            "entrypoint": "src/main.js",
            "path": "functions/create-server"
        },
        {
            "functionId": "join-server",
            "name": "Join Server",
            "runtime": "node-22",
            "entrypoint": "src/main.js",
            "path": "functions/join-server"
        },
        {
            "functionId": "create-channel",
            "name": "Create Channel",
            "runtime": "node-22",
            "entrypoint": "src/main.js",
            "path": "functions/create-channel"
        },
        {
            "functionId": "webrtc-signal",
            "name": "WebRTC Signaling",
            "runtime": "node-22",
            "entrypoint": "src/main.js",
            "path": "functions/webrtc-signal"
        },
        {
            "functionId": "cleanup-expired",
            "name": "Cleanup Expired",
            "runtime": "node-22",
            "entrypoint": "src/main.js",
            "path": "functions/cleanup-expired",
            "schedule": "*/5 * * * *"
        },
        {
            "functionId": "send-friend-request",
            "name": "Send Friend Request",
            "runtime": "node-22",
            "entrypoint": "src/main.js",
            "path": "functions/send-friend-request"
        },
        {
            "functionId": "accept-friend-request",
            "name": "Accept Friend Request",
            "runtime": "node-22",
            "entrypoint": "src/main.js",
            "path": "functions/accept-friend-request"
        },
        {
            "functionId": "decline-friend-request",
            "name": "Decline Friend Request",
            "runtime": "node-22",
            "entrypoint": "src/main.js",
            "path": "functions/decline-friend-request"
        },
        {
            "functionId": "remove-friend",
            "name": "Remove Friend",
            "runtime": "node-22",
            "entrypoint": "src/main.js",
            "path": "functions/remove-friend"
        }
    ],
    "databases": [
        {
            "databaseId": "discord_db",
            "name": "Discord Database"
        }
    ],
    "buckets": [
        {
            "bucketId": "avatars",
            "name": "Avatars",
            "maximumFileSize": 5242880,
            "allowedFileExtensions": [
                "png",
                "jpg",
                "jpeg",
                "gif",
                "webp"
            ]
        },
        {
            "bucketId": "attachments",
            "name": "Attachments",
